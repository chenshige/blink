<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:paddingStart="@dimen/dialog_horizontal_padding"
    android:paddingEnd="@dimen/dialog_horizontal_padding">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/browser_check_box"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/content_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_list_item_height"
        android:layout_toStartOf="@id/image"
        android:gravity="center_vertical"
        android:textColor="@color/dialog_content_text_color"
        android:textSize="@dimen/dialog_item_text_size"
        android:layout_toLeftOf="@id/image" />

</RelativeLayout>