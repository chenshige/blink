<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <RelativeLayout android:id="@+id/title_select"
        android:background="@color/commonurl_select_all_background"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height">
        <ImageView
            android:id="@+id/window_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_browser_home_close"
            android:layout_alignParentLeft="true" />
        <ImageView
            android:id="@+id/delete_all_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_browser_delete_apps_delete"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/ic_recomendurl_divider_line"
        android:layout_below="@id/title_select" />

    <LinearLayout
        android:id="@+id/layout_select_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/commonurl_select_all_background"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recommend_select"
            android:layout_width="@dimen/item_image_width"
            android:layout_height="@dimen/item_image_width"
            android:src="@drawable/ic_browser_delete_apps_check_box_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dip"
            android:gravity="center_vertical"
            android:text="@string/view_select_all"
            android:textColor="@color/common_url_select_all_color"
            android:textSize="@dimen/main_activity_foot_font_size"
            android:visibility="visible"
            android:layout_marginLeft="6dip" />

    </LinearLayout>
</RelativeLayout>