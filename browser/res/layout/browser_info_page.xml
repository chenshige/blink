<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <com.blink.browser.widget.PagerSlidingTabStrip
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/browser_TabPageIndicator_height"
        android:layout_marginEnd="@dimen/browser_info_title"
        android:layout_marginStart="@dimen/browser_info_title"
        android:layout_marginLeft="@dimen/browser_info_title"
        android:layout_marginRight="@dimen/browser_info_title"
        app:pstsIndicatorColor="@color/sliding_tab_indicator_color"
        app:pstsIndicatorHeight="3dp"
        app:pstsShouldExpand="true"
        app:pstsTextAllCaps="false"
        app:pstsUnderlineColor="@color/light_gray"
        app:pstsUnderlineHeight="1dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>
