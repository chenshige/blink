<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_card_view"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/search_engine_height"
    android:layout_alignParentBottom="true">

    <ImageView
        android:id="@+id/select_search_engine_icon"
        android:layout_width="@dimen/select_search_engine_width"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_select_searchengine"
        android:padding="@dimen/select_search_engine_padding"
        android:src="@drawable/imageselector_photo" />

    <TextView
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_engine_height"
        android:layout_toEndOf="@id/select_search_engine_icon"
        android:layout_toRightOf="@id/select_search_engine_icon"
        android:background="@null"
        android:gravity="center_vertical" />


    <ImageView
        android:id="@+id/incognito_icon"
        android:src="@drawable/ic_browser_incognito_in_searchbar"
        android:layout_toLeftOf="@+id/voice_icon"
        android:layout_toStartOf="@+id/voice_icon"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/voice_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_browser_voice" />
</RelativeLayout>