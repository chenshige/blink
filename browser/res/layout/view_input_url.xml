<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_word_layout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/url_search_item"
    android:paddingRight="16dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/url_search_item"
        android:layout_marginLeft="14dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/url_search_input_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_browser_search_url_default_icon"/>
    <TextView
        android:id="@+id/hot_word_content"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_marginRight="50dp"
        android:textColor="@color/input_url_color"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/hot_word_delete_icon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:src="@drawable/ic_browser_clear"/>

</RelativeLayout>

