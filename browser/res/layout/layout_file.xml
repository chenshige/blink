<?xml version="1.0" encoding="utf-8"?>
<com.blink.browser.menu.DownloadFile xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:id="@+id/file_id"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#00000000"
                                            android:visibility="gone"
                                            tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_browser_download_icon"/>
        <View
            android:id="@+id/menu_toast"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="gone"
            android:background="@drawable/menu_toast_drawable"/>
    </RelativeLayout>
</com.blink.browser.menu.DownloadFile>
