<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/progress_text_size_height"
                android:background="@color/pop_toast_bg_color">

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/progress_text_size_height"
        android:layout_marginLeft="@dimen/toast_horizontal_margin"
        android:layout_marginStart="@dimen/toast_horizontal_margin"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_item_text_size"/>

    <TextView
        android:id="@+id/toast_text_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/progress_text_size_height"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/toast_horizontal_margin"
        android:layout_marginRight="@dimen/toast_horizontal_margin"
        android:gravity="center_vertical"
        android:text="@string/view"
        android:textColor="@color/switch_thumb_p"
        android:textSize="@dimen/dialog_item_text_size"/>
</RelativeLayout>