<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/settings_progress_text_size_background"
                android:centerY="0.75"
                android:endColor="@color/settings_progress_text_size_background"
                android:startColor="@color/settings_progress_text_size_background" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/settings_progress_text_size_background"
                    android:centerY="0.75"
                    android:endColor="@color/settings_progress_text_size_background"
                    android:startColor="@color/settings_progress_text_size_background" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="@color/progress_text_size_seekbar_thumb_stroke_n"
                    android:centerY="0.75"
                    android:endColor="@color/progress_text_size_seekbar_thumb_stroke_n"
                    android:startColor="@color/progress_text_size_seekbar_thumb_stroke_n" />
            </shape>
        </clip>
    </item>

</layer-list>