<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#EFEFEF" />
            <corners android:radius="15dp" />

        </shape>
    </item>
    <item android:bottom="10dp" android:left="10dp"
        android:right="10dp" android:top="10dp">
        <shape>
            <gradient android:angle="90" android:centerColor="#00000000" android:centerX="0.5"
                android:centerY="0.5" android:endColor="#00000000" android:startColor="#00000000"
                android:type="linear" />

            <padding android:bottom="2dp" android:left="15dp"
                android:right="15dp" android:top="5dp" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>