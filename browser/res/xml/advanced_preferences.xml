    <com.blink.browser.preferences.BrowserSwitchPreference
        android:defaultValue="true"
        android:key="restore_tabs_on_startup"
        android:layout="@layout/browser_preference"
        android:title="@string/pref_restore_tabs_on_startup" />

    <com.blink.browser.preferences.BrowserSwitchPreference
        android:defaultValue="true"
        android:key="enable_cookies_incognito"
        android:layout="@layout/browser_preference"
        android:summary="@string/pref_content_cookies_summary"
        android:title="@string/pref_content_cookies" />

    <com.blink.browser.preferences.BrowserSwitchPreference
        android:defaultValue="true"
        android:key="autofit_pages"
        android:layout="@layout/browser_preference"
        android:summary="@string/pref_content_autofit_summary"
        android:title="@string/pref_content_autofit" />

    <com.blink.browser.preferences.BrowserSwitchPreference
        android:defaultValue="true"
        android:key="block_popup_windows"
        android:layout="@layout/browser_preference"
        android:title="@string/pref_content_block_popups" />

    <com.blink.browser.preferences.BrowserSwitchPreference
        android:key="notification_tool_show"
        android:layout="@layout/browser_preference"
        android:title="@string/pref_notification_tool_show" />

    <com.blink.browser.preferences.BrowserPreference
        android:key="custom_download_path"
        android:layout="@layout/browser_summary_preference"
        android:title="@string/pref_download_path_setting_screen_title" />

    <PreferenceCategory android:layout="@layout/setting_hight_divider" />

    <com.blink.browser.preferences.BrowserSwitchPreference
        android:defaultValue="true"
        android:key="enable_javascript"
        android:layout="@layout/browser_preference"
        android:title="@string/pref_content_javascript" />

    <com.blink.browser.preferences.BrowserSwitchPreference
        android:defaultValue="false"
        android:key="force_userscalable"
        android:layout="@layout/browser_preference"
        android:summary="@string/pref_force_userscalable_summary"
        android:title="@string/pref_force_userscalable" />

    <com.blink.browser.preferences.BrowserPreference
        android:key="default_text_encoding"
        android:layout="@layout/browser_preference"
        android:title="@string/pref_default_text_encoding"
        android:widgetLayout="@layout/preference_text_item"/>

    <com.blink.browser.preferences.BrowserPreference
        android:key="user_agent"
        android:layout="@layout/browser_preference"
        android:title="@string/accessibility_button_uaswitch"
        android:widgetLayout="@layout/preference_text_item"/>

    <PreferenceCategory android:layout="@layout/setting_hight_divider" />


