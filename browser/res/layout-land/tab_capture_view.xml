<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/nav_tab_width"
    android:layout_height="@dimen/nav_tab_height"
    android:background="@drawable/fake_shadow_drawable"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_tab_titleheight"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:src="@drawable/ic_browser_close" />

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/nav_tab_title_normal_bg"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:paddingLeft="15dp"
                android:paddingStart="15dp"
                android:singleLine="true"
                android:textColor="#8A000000"
                android:textSize="@dimen/nav_screen_title_text_size" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tab_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/nav_tab_titleheight">
        </ImageView>
    </android.support.v7.widget.CardView>
</LinearLayout>